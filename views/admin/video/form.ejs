<% _.defaults(item, {
  name : '',
  description : '',
  full_description : '',
  url : '',
  img_url : '',
  categories : []
}) %>
<form class="default-form"  name="add_video" method="post" action="">
  <legend><%= title %></legend>
  <div class="default-form__content">
    <div class="block-row">
      <label>Название видео</label>
      <input name="name" type="text" value="<%= item.name %>"/>
    </div>
    <div class="block-row">
      <label>Описание видео</label>
      <textarea name="description"><%= item.description%></textarea>
    </div>
    <div class="block-row">
      <label>Детальное описание</label>
      <textarea name="full_description" cols="70" rows="8"><%= item.full_description %></textarea>
    </div>
    <div class="block-row">
      <label>Ссылка на видео-файл</label>
      <input type="text" name="url"  value="<%= item.url %>"/>
    </div>
    <div class="block-row">
      <label>Ссылка на картинку</label>
      <input type="text" name="img_url"  value="<%= item.img_url %>"/>
      <% if (item.img_url) { %>
          <img src="<%= item.img_url %>"/>
      <% } %>
    </div>
    <div class="block-row">
      <label>Категории</label>
      <select multiple="multiple" name="categories[]" >
        <% _.each(categories, (category) => {
          var selected = (item.categories.indexOf(category.id) !== -1)?'selected="selected"':'';
        %>
        <option <%- selected %> value="<%= category.id%>"><%= category.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="block-row">
      <input type="submit" value="Сохранить"/>
    </div>
  </div>

</form>
